<Window x:Class="Session2Try2.Windows.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Session2Try2.Windows"
        mc:Ignorable="d"
        Title="AddClientWindow" Height="450" Width="800">
    <ScrollViewer>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Vertical" x:Name="ClientSp">
            <Label Content="Имя"/>
            <TextBox x:Name="NameClientTb" Text="{Binding Name}"/>
            <Label Content="Фамилия"/>
            <TextBox x:Name="SurnameClientTb" Text="{Binding Surname}"/>
            <Label Content="Отчество"/>
            <TextBox x:Name="PatronimicClientTb" Text="{Binding Patronimic}"/>
            <Label Content="Дата рождения"/>
            <DatePicker Name="DateBirthDp" SelectedDate="{Binding DateBirth}"/>
            <Label Content="Номер паспорта"/>
            <TextBox x:Name="NumberPass" Text="{Binding Pasport_N}"/>
            <Label Content="Серия паспорта"/>
            <TextBox x:Name="SerialPass" Text="{Binding Pasport_S}"/>
            <Label Content="Телефон"/>
            <TextBox x:Name="PhoneTb" Text="{Binding Phone}"/>
            <Label Content="Emal"/>
                <TextBox x:Name="EmailTb" Text="{Binding Email}"/>
                <Label Content="Организация"/>
            <ComboBox x:Name="OrgCb" SelectedItem="{Binding Organisation}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

        </StackPanel>
            <Button x:Name="OkBtn" Click="OkBtn_Click" Content="Ок"/>
        </StackPanel>

    </ScrollViewer>
</Window>
