<Page x:Class="Session2Try2.Pages.CodeWastePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Session2Try2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CodeWastePage">
    <StackPanel Orientation="Vertical" x:Name="OrderSp">
        <TextBox x:Name="CodeTb" IsReadOnly="True" KeyUp="CodeTb_KeyUp" Text="{Binding Code}"/>
        <Button x:Name="QrBtn" Click="QrBtn_Click" Content="QR-код"/>
        <StackPanel Orientation="Vertical" x:Name="VisibSp" Visibility="Collapsed">
            <Label Content="Поиск"/>
            <TextBox x:Name="SearchClientTb" TextChanged="SearchClientTb_TextChanged" />
            <Label Content="Клиент"/>
            <ComboBox x:Name="ClientCb" SelectedItem="{Binding Client}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Fio}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Button x:Name="AddClientBtn" Click="AddClientBtn_Click" Content="Добавить"/>

            <Label Content="Поиск"/>
            <TextBox x:Name="ServiceSearchTb" TextChanged="ServiceSearchTb_TextChanged"/>

            <ComboBox x:Name="ServiceCb" SelectedItem="{Binding Service}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Button x:Name="AddServiceBtn" Click="AddServiceBtn_Click" Content="Добавить"/>

            <DataGrid x:Name="ServiceDg" IsReadOnly="True" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Цена" Binding="{Binding Price}"/>
                </DataGrid.Columns>
            </DataGrid>

            <TextBox x:Name="FinalPriceTb" IsReadOnly="True" Text="0"/>
            <Button x:Name="OkBtn" Click="OkBtn_Click" Content="Ок"/>
        </StackPanel>
    </StackPanel>
</Page>
